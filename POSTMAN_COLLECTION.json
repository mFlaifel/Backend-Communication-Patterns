{
  "info": {
    "name": "FoodFast API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"email\": \"user@example.com\",\n\t\"password\": \"password123\",\n\t\"name\": \"John Doe\",\n\t\"role\": \"customer\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"email\": \"user@example.com\",\n\t\"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"restaurantId\": \"uuid\",\n\t\"items\": [\n\t\t{\n\t\t\t\"itemId\": \"uuid\",\n\t\t\t\"quantity\": 2\n\t\t}\n\t]\n}"
            }
          }
        },
        {
          "name": "Get Orders",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Restaurant",
      "item": [
        {
          "name": "Get Restaurants",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/restaurants"
          }
        },
        {
          "name": "Get Restaurant Menu",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/restaurants/:id/menu"
          }
        }
      ]
    },
    {
      "name": "Driver",
      "item": [
        {
          "name": "Get Available Orders",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/driver/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Accept Order",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/driver/orders/:id/accept",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Support",
      "item": [
        {
          "name": "Create Support Ticket",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/support/tickets",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"subject\": \"Order Issue\",\n\t\"message\": \"My order is delayed\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Announcements",
      "item": [
        {
          "name": "Get Announcements",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/announcements"
          }
        }
      ]
    },
    {
      "name": "Images",
      "item": [
        {
          "name": "Upload Image",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/images/upload",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}
